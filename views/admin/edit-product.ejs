<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/item.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="item-form" action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
            <div class="form-control">
                <label for="Name">Name</label>
                <input type="text" name="name" id="name" value="<% if (editing) { %><%= product.name %><% } %>"required>
            </div>
            <div class="form-control">
                <label for="Count">Count</label>
                <input type="number" name="count" id="count" step="1" value="<% if (editing) { %><%= product.count %><% } %>" required>
            </div>
            <div class="form-control">
                <label for="Time">Time</label>
                <input type="datetime-local" name="time" id="time" value="<% if (editing) { %><%= product.time %><% } %>"required>
            </div> 
            <% if (editing) { %>
                <input type="hidden" value="<%= product.id %>" name="productId">
            <% } %>

            <button class="btn" type="submit"><% if (editing) { %>Update Item<% } else { %>Save Item<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>